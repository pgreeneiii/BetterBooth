<div class="row mb-3">
   <div class="col-md-6">
      <div class="row welcome">
         <div class="col-md-12">
            <h3>
               <strong>Simple</strong>
            </h3>
            <h4>
               Search classes and see ratings / bid history, all on the same page!
            </h4>
         </div>
      </div>

      <div class="row welcome">
         <div class="col-md-8">
            <h3>
               <strong>Insightful</strong>
            </h3>
            <h4>
               See course-specific data in a useful, graphical format
            </h4>
         </div>
         <div class="col-md-4">
            <%= image_tag "analytics.svg", :class => 'img' %>
         </div>
      </div>

      <div class="row welcome">
         <div class="col-md-8">
            <h3>
               <strong>Dynamic</strong>
            </h3>
            <h4>
               Updates planned! <a href='mailto:pgreene@chicagobooth.edu'>Email me</a> with suggestions.
            </h4>
         </div>
         <div class="col-md-4">
            <%= image_tag "rating.svg", :class => 'img' %>
         </div>
      </div>
   </div>
   <div class="col-md-offset-1 col-md-4">
      <%= render 'welcome/sign_up' %>
   </div>
</div>
