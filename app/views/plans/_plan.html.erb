<div class='row'>
   <div class='col-md-12'>
      <div class="plan">
         <table class='table'>
            <thead>
               <tr>
                  <th style="vertical-align: middle;">
                     Planned Bid
                  </th>
                  <th style="vertical-align: middle;">
                     Course Details
                  </th>
                  <th style="vertical-align: middle;">
                     Actions
                  </th>
               </tr>
            </thead>
            <tbody>
               <% plans.each do |plan| %>
               <tr>
                  <td style="vertical-align: middle;">
                     <p><%= plan.bid %></p>
                  </td>
                  <td style="text-align: left; vertical-align: middle;">
                     <ul style="padding-left: 10px;list-style-type:none">
                        <li><strong><%= plan.schedule.section.course.course_number %>-<%= plan.schedule.section_number %></strong></li>
                        <li><%= plan.schedule.section.course.course_name %></li>
                        <li><%= plan.schedule.section.professor.first_name %> <%= plan.schedule.section.professor.last_name %></li>
                        <li><%= plan.schedule.daytable.day_output %> <%= plan.schedule.timetable.time_output %></li>
                     </ul>
                  </td>
                  <td style="vertical-align: middle;">
                     <ul style="padding-left: 10px;list-style-type:none">
                        <li>
                           <a href="/sections/<%= plan.section.id %>" class="btn btn-primary btn-sm btn-block"><i class="fas fa-search"></i></a>
                        </li>
                        <li>
                           <a href="/delete_plan/<%= plan.id %>" class="btn btn-danger btn-sm btn-block" rel="nofollow"><i class="fas fa-times"></i></a>
                        </li>
                     </ul>
                  </td>
               </tr>
               <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>
