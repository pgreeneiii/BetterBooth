<div style="padding-left: 2vw;">
   <table style="font-family: 'Source Sans Pro',Calibri,Candara,Arial,sans-serif; font-weight: 300; color: #333333; width: 80vw; border-spacing: 0px;">
      <thead style="text-align: center;">
         <tr>
            <th style="vertical-align: middle;">
               Planned Bid
            </th>
            <th style="padding-left: 5%; text-align: left; vertical-align: middle;">
               Course Details
            </th>
            <th style="vertical-align: middle;">
               Actions
            </th>
         </tr>
      </thead>
      <tbody>
         <% plans.each do |plan| %>
         <tr>
            <td style="text-align: center; vertical-align: middle; border-bottom: 1px solid #ddd; margin-right: 0px; padding-top: 5px;">
               <p><%= plan.bid %></p>
            </td>
            <td style="padding-left: 5%; text-align: left; vertical-align: middle; border-bottom: 1px solid #ddd;padding-top: 5px;">
               <ul style="padding-left: 10px; list-style-type:none; margin-bottom: 7px;">
                  <li><strong><%= plan.schedule.section.course.course_number %>-<%= plan.schedule.section_number %></strong></li>
                  <li><%= plan.schedule.section.course.course_name %></li>
                  <li><%= plan.schedule.section.professor.first_name %> <%= plan.schedule.section.professor.last_name %></li>
                  <li><%= plan.schedule.daytable.day_output %> <%= plan.schedule.timetable.time_output %></li>
               </ul>
            </td>
            <td style="text-align: center; vertical-align: middle; border-bottom: 1px solid #ddd;padding-top: 5px;">
               <ul style="padding-left: 10px;list-style-type:none;">
                  <li>
                     <a href="http://betterbooth.herokuapp.com/sections/<%= plan.section.id %>"> See Course Details</a>
                  </li>
               </ul>
            </td>
         </tr>
         <% end %>
      </tbody>
   </table>
</div>
