<!-- Validation failure messages -->
<% if @loan.errors.any? %>
  <% @loan.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Loan</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_loan" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @loan.name %>">
      </div>

      <!-- Label and input for principal -->
      <div class="form-group">
        <label for="principal" class="control-label">
          Principal
        </label>

        <input type="number" step="0.01" min="0" id="principal" name="principal" placeholder="Principal" class="form-control" value="<%= @loan.principal %>">
      </div>

      <!-- Label and input for due_date -->
      <div class="form-group">
        <label for="due_date" class="control-label">
          Due date
        </label>

        <input type="month" id="due_date" name="due_date" placeholder="Due date" class="form-control" value="<%= @loan.due_date %>">
      </div>

      <!-- Label and input for apr -->
      <div class="form-group">
        <label for="apr" class="control-label">
          Apr
        </label>

        <input type="number" step="0.01" min="0" id="apr" name="apr" placeholder="Apr" class="form-control" value="<%= @loan.apr %>">
      </div>

      <% if current_user != nil %> <!-- If Signed In -->

         <!-- Label and input for user_id -->
         <div class="form-group">

           <input type="hidden" min="0" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
         </div>

      <% else %> <!-- For development purposes -->

         <!-- Label and input for user_id -->
         <div class="form-group">
           <label for="user_id" class="control-label">
             User
           </label>

           <input type="number" min="0" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @loan.user_id %>">
         </div>

      <% end %>



      <button class="btn btn-success">
        Create Loan
      </button>
      or
      <a href="/loans">Cancel</a>
    </form>
  </div>
</div>
