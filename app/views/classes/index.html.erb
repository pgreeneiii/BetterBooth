<div class="page-header">
  <h1>
    Classes
    <a href="/classes/new" class="btn btn-lg btn-success">New Class</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course</th>
        <th>Professor</th>
        <th>Actions</th>
      </tr>

      <% @classes.each do |class| %>
      <tr>
        <td><%= class.course_id %></td>
        <td><%= class.professor_id %></td>
        <td>
          <a href="/classes/<%= class.id %>" class="btn btn-primary">Show</a>
          <a href="/classes/<%= class.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_class/<%= class.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
