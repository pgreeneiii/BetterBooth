<div class="page-header">
  <h1>
    Schedules
    <a href="/schedules/new" class="btn btn-lg btn-success">New Schedule</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Section</th>
        <th>Section number</th>
        <th>Quarter</th>
        <th>Day</th>
        <th>Time</th>
        <th>Half credit</th>
        <th>Actions</th>
      </tr>

      <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.section_id %></td>
        <td><%= schedule.section_number %></td>
        <td><%= schedule.quarter %></td>
        <td><%= schedule.day %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.half_credit %></td>
        <td>
          <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">Show</a>
          <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
